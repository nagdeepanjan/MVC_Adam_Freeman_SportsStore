@model IEnumerable<string>
<div class="d-grid gap-2">
	<a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Home" asp-route-category="">Home</a>
	@foreach (string category in Model ?? Enumerable.Empty<string>())
	{
		<a
		   asp-action="Index" asp-controller="Home"
		   asp-route-category="@category"
		   asp-route-productPage="1" class="btn @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")">
			@category
		</a>
	}
</div>